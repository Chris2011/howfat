    "@types/npm-package-arg": "^6.1.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "humile": "^0.2.4"
  },
  "dependencies": {
    "npm-package-arg": "^6.1.0",
    "package-options": "0.0.1",
    "semver": "^5.7.1",
